#include <iostream>
using namespace std;

float imc(float peso, float altura)
{
    return peso/(altura*altura);
}

int main()
{
    float altura, peso;
    cin >> altura;
    cin >> peso;
    cout << "Meu IMC Ã© " << imc(peso,altura);
    return 0;
}
